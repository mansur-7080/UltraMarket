# ===== ULTRA MARKET AUTH SERVICE ENVIRONMENT CONFIGURATION =====

# ===== BASIC CONFIGURATION =====
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://username:password@localhost:5432/ultramarket_auth
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=30000
DB_DESTROY_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200
DB_LOG_LEVEL=warn
DB_SLOW_QUERY_THRESHOLD=1000
DB_HEALTH_CHECK_INTERVAL=30000

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-minimum-32-characters-long
JWT_ACCESS_SECRET=your-super-secure-jwt-access-secret-key-minimum-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== SESSION CONFIGURATION =====
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters-long
ENCRYPTION_KEY=your-super-secure-encryption-key-minimum-32-characters-long

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://ultramarket.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ===== EMAIL CONFIGURATION =====
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ultramarket.com

# Gmail App Password Instructions:
# 1. Enable 2FA on your Google account
# 2. Go to Google Account settings > Security > App passwords
# 3. Generate a new app password for "Mail"
# 4. Use that password in EMAIL_PASS

# ===== SMS CONFIGURATION (OPTIONAL) =====
SMS_SERVICE=twilio
SMS_API_KEY=your-twilio-api-key
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# ===== SECURITY CONFIGURATION =====
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
VALID_API_KEYS=key1,key2,key3

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# ===== LOGGING =====
LOG_FORMAT=json
LOG_FILE=auth-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===== MEMORY MANAGEMENT =====
MEMORY_WARNING_THRESHOLD=70
MEMORY_CRITICAL_THRESHOLD=85
MEMORY_EMERGENCY_THRESHOLD=95
ENABLE_GC_MONITORING=true

# ===== PRODUCTION OVERRIDES =====
# Uncomment and configure for production
# NODE_ENV=production
# LOG_LEVEL=warn
# CORS_ORIGIN=https://ultramarket.com,https://admin.ultramarket.com
# EMAIL_SERVICE=sendgrid
# SMS_SERVICE=aws-sns 