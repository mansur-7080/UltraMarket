{
  "name": "@ultramarket/auth-service",
  "version": "1.0.0",
  "description": "Professional Authentication Service for UltraMarket Platform",
  "main": "dist/index.production.js",
  "scripts": {
    "start": "node dist/index.production.js",
    "start:dev": "nodemon src/index.production.ts",
    "build": "tsc",
    "build:production": "npm run clean && tsc && npm run copy-assets",
    "clean": "rimraf dist",
    "copy-assets": "cp -r src/templates dist/ && cp -r src/static dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "generate": "prisma generate",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "db:restore": "psql $DATABASE_URL < backup.sql",
    "redis:flush": "redis-cli FLUSHALL",
    "redis:monitor": "redis-cli MONITOR",
    "logs:tail": "tail -f logs/auth-service.log",
    "logs:error": "tail -f logs/auth-service-error.log",
    "logs:audit": "tail -f logs/audit.log",
    "logs:security": "tail -f logs/security.log",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "health:detailed": "curl -f http://localhost:3001/health/detailed",
    "metrics": "curl http://localhost:3001/health/metrics",
    "docs": "curl http://localhost:3001/docs",
    "docker:build": "docker build -t ultramarket/auth-service:latest .",
    "docker:run": "docker run -p 3001:3001 --env-file env.production ultramarket/auth-service:latest",
    "docker:push": "docker push ultramarket/auth-service:latest",
    "k8s:deploy": "kubectl apply -f kubernetes/",
    "k8s:delete": "kubectl delete -f kubernetes/",
    "k8s:logs": "kubectl logs -f deployment/auth-service",
    "k8s:status": "kubectl get pods -l app=auth-service",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:update": "npm update",
    "performance:profile": "node --prof dist/index.production.js",
    "performance:analyze": "node --prof-process isolate-*.log > profile.txt",
    "monitoring:start": "pm2 start ecosystem.config.js",
    "monitoring:stop": "pm2 stop auth-service",
    "monitoring:restart": "pm2 restart auth-service",
    "monitoring:logs": "pm2 logs auth-service",
    "monitoring:status": "pm2 status",
    "ci:build": "npm run clean && npm run build:production && npm run test:ci",
    "ci:deploy": "npm run docker:build && npm run docker:push && npm run k8s:deploy",
    "preinstall": "npm run generate",
    "postinstall": "npm run migrate",
    "prestart": "npm run build",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "oauth",
    "security",
    "microservice",
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "redis",
    "postgresql",
    "ultramarket"
  ],
  "author": "UltraMarket Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ultramarket/auth-service.git"
  },
  "bugs": {
    "url": "https://github.com/ultramarket/auth-service/issues"
  },
  "homepage": "https://github.com/ultramarket/auth-service#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "config": {
    "unsafe-perm": true
  },
  "files": [
    "dist/**/*",
    "src/templates/**/*",
    "src/static/**/*",
    "prisma/**/*",
    "kubernetes/**/*",
    "Dockerfile",
    "docker-compose.yml",
    "ecosystem.config.js",
    "env.production",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
} 